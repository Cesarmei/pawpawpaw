<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Registo
        </h1>
        
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="nome">Nome</label>
            <input
              type="nome"
              id="nome"
              name="nome"
              class="form-control"
              placeholder="Introduza o seu nome"
              value="<%= typeof nome != 'undefined' ? nome : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="genero">Genero</label>
            <input
              type="genero"
              id="genero"
              name="genero"
              class="form-control"
              placeholder="Genero"
              value="<%= typeof genero != 'undefined' ? genero : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Introduza a password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirme a  Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirme a password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Registar
          </button>
        </form>
        <p class="lead mt-4">JÃ¡ tem conta? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>