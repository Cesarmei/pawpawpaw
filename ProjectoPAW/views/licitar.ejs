<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i></i> Nova Licitação
      </h1>
      <% include ./partials/messages %>
      <form action="/leiloes/licitar" method="POST">
        <div class="form-group">
          <label for="valor">Valor</label>
          <input type="valor" id="valor" name="valor" class="form-control" placeholder="Introduza a valor"
            value="<%= typeof valor != 'undefined' ? valor : '' %>" />
        </div>
        <form action="/leiloes/licitar" method="POST">
          <div class="form-group">
            <label for="user">User</label>
            <input readonly type="user" id="user" name="user" class="form-control" placeholder="Será associado o user à licitação."
              value='<%= user_name %>'  />
          </div>
         
          <div class="form-group">
            <label for="leilao">Leilao</label>
            <input readonly type="leilao" id="leilao" name="leilao" class="form-control"
              placeholder="Leilao a ser licitado."
              value="<%= id_tlmv %>"  />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Licitar
          </button>
        </form>
        <p class="lead mt-2"><a href="/dashboardUser">Voltar</a></p>
    </div>
  </div>
</div>
